{
    "[makefile]": {
        "editor.insertSpaces": false
    },
    "[markdown]": {
        "editor.quickSuggestions": {
            "comments": "off",
            "other": "off",
            "strings": "off"
        },
        "editor.wordWrap": "bounded"
    },
    "C_Cpp.clang_format_fallbackStyle": "{ BasedOnStyle: Google, IndentWidth: 4, ColumnLimit: 0}",
    "clang-format.fallbackStyle": "Google",
    "cSpell.diagnosticLevel": "Hint", // Highlight mis-spelled words in editor, but don't show in problems list
    "cSpell.enabled": true,
    "cSpell.enableFiletypes": [
        "dockerfile",
        "groovy",
        "makefile",
        "shellscript"
    ],
    "cSpell.userWords": [
        "colours",
		"behaviour"
    ],
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.wordWrap": "on",
    "editor.accessibilitySupport": "off",
    "editor.bracketPairColorization.enabled": true,
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorStyle": "block",
    "editor.fontFamily": "'JetBrainsMonoNL NF', 'monospace', 'Droid Sans Fallback'",
    "editor.fontSize": 16,
    "editor.fontWeight": 600,
    "editor.guides.highlightActiveIndentation": "always",
    "editor.insertSpaces": false,
    "editor.minimap.enabled": false,
    "editor.minimap.renderCharacters": false,
    "editor.renderControlCharacters": false,
    "editor.renderWhitespace": "all",
    "editor.rulers": [
        120
    ],
    "editor.scrollBeyondLastLine": true,
    "editor.smoothScrolling": true,
    "editor.suggest.preview": true,
    "editor.wordWrapColumn": 140,
    "extensions.ignoreRecommendations": true,
    "files.associations": {
        "*.aliases": "shellscript",
        "*.bash*": "shellscript",
        "*.bsp": "c",
        "*.exports": "shellscript",
        "*.functions": "shellscript",
        "*.hardware_description": "json",
        "*.shell": "shellscript",
        "*.xc": "c",
        "*.zsh*": "shellscript",
        "Makefile.*": "makefile"
    },
    "files.eol": "\n",
    "files.exclude": {
        "**/.git": false
    },
    "files.hotExit": "onExitAndWindowClose",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "git.detectSubmodulesLimit": 30,
    "git.mergeEditor": true,
    "l13Diff.enablePreview": true,
    "markdown-preview-enhanced.enableExtendedTableSyntax": true,
    "markdown-preview-github-styles.colorTheme": "system",
    "markdown.extension.list.indentationSize": "inherit",
    "markdown.preview.breaks": true,
    "markdown.preview.fontFamily": "'Ubuntu', 'Droid Sans', sans-serif",
    "markdown.preview.fontSize": 18,
    "markdown.preview.typographer": true,
    "markdownlint.config": {
        "MD007": false,
        "MD010": false,
        "MD014": false,
        "MD025": false,
        "MD033": false
    },
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "python.linting.enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=120",
        "--ignore="
    ],
    "python.linting.flake8Enabled": true,
    "python.showStartPage": false,
    "security.workspace.trust.untrustedFiles": "open",
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext"
    ],
    "spellright.language": [
        "en",
        "English (American)"
    ],
    "telemetry.telemetryLevel": "off",
    "terminal.external.linuxExec": "",
    "terminal.integrated.commandsToSkipShell": [
        "workbench.action.toggleSidebarVisibility", // enable Ctrl-B to toggle sidebar while in terminal
        "workbench.action.findInFiles" // enable Ctrl-H to open find in files while in terminal
    ],
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.defaultProfile.linux": "zsh",
    "terminal.integrated.defaultProfile.windows": "Ubuntu (WSL)",
    "terminal.integrated.enablePersistentSessions": false,
    "terminal.integrated.fontFamily": "'JetBrainsMonoNL NF', 'monospace'",
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.fontWeight": "600",
    "terminal.integrated.lineHeight": 1,
    "terminal.integrated.minimumContrastRatio": 1,
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "args": [
                "-noLogo"
            ],
            "source": "PowerShell"
        }
    },
    "terminal.integrated.scrollback": 1000000,
    "terminal.integrated.shellIntegration.enabled": true,
    "terminal.integrated.smoothScrolling": true,
    "terminal.integrated.tabs.enabled": false,
    "terminal.integrated.tabs.showActiveTerminal": "always",
    "todo-tree.filtering.includeHiddenFiles": true,
    "todo-tree.general.showActivityBarBadge": true,
    "todo-tree.general.statusBar": "total",
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "[ ]",
        "[x]",
        "TODO:",
        "#TODO",
        "#TODO:"
    ],
    "trailing-spaces.trimOnSave": true,
    "typescript.disableAutomaticTypeAcquisition": true,
    "vscode-markdown-github.theme.mode": "auto",
    "vsicons.dontShowNewVersionMessage": true,
    "window.autoDetectColorScheme": true,
    "window.commandCenter": true,
    "window.density.editorTabHeight": "compact",
    "window.menuBarVisibility": "hidden",
    "window.title": "${dirty}${rootPath}",
    "window.titleBarStyle": "custom",
    "window.zoomLevel": -1,
    "workbench.activityBar.location": "top",
    "workbench.colorCustomizations": {
        "[Github Light Theme - Gray]": {
            "activityBar.activeBackground": "#d8d8d8",
            "diffEditor.border": "#e3dddd",
            "editorGroup.border": "#e3e3dd",
            "editorOverviewRuler.border": "#ffffff",
            "panel.border": "#a7a7a7", // border between editor and terminal
            "sideBar.border": "#949496",
            "sideBySideEditor.verticalBorder": "#e3dddd",
            "statusBar.background": "#cfc9c9",
            "tab.activeBackground": "#d8d8d8",
            "window.activeBorder": "#949496"
        },
        "editorHint.border": "#00ff66", // Underline the entire word with dots in your chosen color
        "editorHint.foreground": "#ff0000" // Change the color of three dots to red
    },
    "workbench.colorTheme": "Github Light Theme - Gray",
    "workbench.editor.decorations.badges": true,
    "workbench.editor.enablePreviewFromCodeNavigation": true,
    "workbench.editor.enablePreviewFromQuickOpen": true,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.showIcons": false,
    "workbench.editor.tabActionCloseVisibility": false,
    "workbench.editor.tabCloseButton": "off",
    "workbench.editor.wrapTabs": true,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "workbench.iconTheme": "vscode-icons",
    "workbench.layoutControl.enabled": false,
    "workbench.preferredDarkColorTheme": "Gruvbox Dark Hard",
    "workbench.preferredLightColorTheme": "GitHub Light",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.tree.indent": 20,
    "workbench.tree.renderIndentGuides": "always",
    "workbench.view.alwaysShowHeaderActions": true,
    "xml.symbols.maxItemsComputed": 10000,
    "zenMode.centerLayout": false,
    "zenMode.fullScreen": false,
    "zenMode.hideLineNumbers": false
}
